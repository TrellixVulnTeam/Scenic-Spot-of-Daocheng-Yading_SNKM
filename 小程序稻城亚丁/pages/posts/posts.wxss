/* pages/posts/posts.wxss */
swiper{
  width: 100%;
  height: 320rpx;
}
swiper image{
  width: 100%;
  height: 100%;
}
.post-container{
  display: flex;
  flex-direction: column;
  margin-bottom: -2rpx;
  border-bottom: 2rpx solid #808080;
  border-top: 2rpx solid #808080;
  padding-bottom: 10rpx;
}
.post-author{
  margin:20rpx 10rpx;
  display: flex;
  flex-direction: row;
  /* 每个元素的排列情况 */
  align-items: center;
}
/* 头像图片 */
.post-author-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
/* 标题 */
.post-author-data{
  margin-left: 20rpx;
  font-size: 30rpx;
}
/* 标题 */
.post-title{
  font-size: 40rpx;
  font-weight: bold;
  margin: 0 10rpx 20rpx 10rpx;
}
/* 内容图片 */
.post-img{
  width: 97.5%;
  height: 400rpx;
  margin: 0 10rpx 20rpx 10rpx;
}
/* 摘要 */
.post-abstract{
  font-size: 30rpx;
  margin: 0 10rpx 20rpx 10rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
  color: #808080;
}
/* 点赞和浏览 */
.post-view{
  display: flex;
  flex-direction: row;
  margin: 0 10rpx 20rpx 10rpx;
  line-height: 20rpx;
}
.post-view-font{
  margin:0 20rpx ;
  vertical-align: middle;
}