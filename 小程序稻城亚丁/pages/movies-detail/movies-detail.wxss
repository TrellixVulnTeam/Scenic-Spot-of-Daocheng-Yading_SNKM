/* pages/movies-detail/movies-detail.wxss */
.detail-container{
  display: flex;
  flex-direction: column;
}
/* 顶部背景 */
.detail-top .bgp{
  width: 100%;
  height: 340rpx;
  /* filter: blur(20rpx); */
  /* opacity: .8; */
  /* background-color: rgba(255, 255, 255, .5); */
  z-index: -1;
}
.describe{
  margin: -300rpx 0 200rpx 40rpx;
}
.describe .like-view{
  color: #908C86;
}
.describe text{
  color: #DC2251;
}
.describe>text{
  display: block;
  font-size: 40rpx;
  font-weight: 800;
  margin-bottom: 50rpx;
  color: snow;
}
.describe>text:nth-child(2){
  font-weight: normal;
  font-size: 36rpx;
}
/* 海报 */
.large{
  position: relative;
  right: 0rpx;
  top: -380rpx;
  left: 500rpx;
  width: 220rpx;
  height: 330rpx;
}
/* 电影信息 */
.detail-brief {
  border-bottom: 1rpx solid #808080;
  margin-top: -450rpx;
  padding:0 0 70rpx 30rpx ;
}
.detail-brief>text{
  font-size: 38rpx;
  color: #535353;
}
.info text,.actor{
  display: block;
  margin-top: 22rpx;
  color: #808080;
}
/* 剧情简介 */
.content,.avatars{
  color: #808080;
  margin-top: 50rpx;
  padding:0 0 70rpx 30rpx ;
  border-bottom: 1rpx solid #808080;
  letter-spacing: 2rpx;
}
.content view{
  margin-top: 20rpx;
  
  letter-spacing: 4rpx;
}
/* 影人 */
.actor-img ul li{
  float: left;
  margin-right: 15rpx;
  text-align: center;
  margin-top: 50rpx;
}
.avatars image{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 220rpx;
  height: 330rpx;
}