/* pages/post-detail/post-detail.wxss */
.detail-container{
  display: flex;
  flex-direction: column;
}
/* 搜索框 */
.movies-search{
  display: flex;
  flex-direction: row;
  margin:15rpx 5rpx;
}

.head-img{
  width: 100%;
  height: 450rpx;
}
.detail-author{
  /* display: flex;
  flex-direction: row; */
  margin-left: 30rpx;
  margin-top: 20rpx;
  align-items: center;
}
.avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.author{
  font-size: 35rpx;
  font-weight: 800;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #808080;
}
.const-text{
  font-size: 30rpx;
  font-weight: 500;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #808080;
}
.date{
  font-size: 35rpx;
  font-weight: 400;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #808080;
}
.title{
  margin-left: 60rpx;
  margin-top: 20rpx;
  font-size: 40rpx;
  font-weight: 700;
  letter-spacing: 4rpx;
  color: #4b556c;
}
.tool{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.circle{
  display: flex;
  flex-direction: row;
  width: 650rpx;
  justify-content: flex-end;
}
.circle-img{
  width: 90rpx;
  height: 90rpx;
  margin-left: 20rpx;
}
.horizon{
  width: 650rpx;
  margin-left: 20rpx;
  height: 1rpx;
  background-color: darkgray;
  position: absolute;
  z-index: -1;
}
.detail{
  color: #6F6F6F;
  margin: 20rpx 30rpx 20rpx 30rpx;
  line-height: 55rpx;
  letter-spacing: 4rpx;
}